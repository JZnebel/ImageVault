<div class="mb-6">
  <h1 class="text-2xl font-semibold text-gray-700 dark:text-white"><%= @project.name %></h1>
  <p class="text-gray-700 dark:text-gray-300 mb-2"><%= @project.description %></p>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
  <!-- Current Users Section -->
  <div>
    <h2 class="text-xl font-semibold mb-4 text-gray-700 dark:text-white">Users in this project</h2>
    <% if @users.any? %>
      <ul class="space-y-2">
        <% @users.each do |user| %>
          <li class="p-3 bg-white dark:bg-gray-800 rounded shadow flex items-center justify-between">
            <div>
              <%= link_to user.email, admin_user_path(user), 
                  class: "text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300" %>
              <span class="ml-2 text-sm text-gray-500 dark:text-gray-400">(<%= user.role %>)</span>
            </div>
            <%= button_to "Remove", admin_project_remove_user_path(@project, user), 
                method: :delete,
                class: "text-red-600 hover:text-red-800 dark:text-red-400 dark:hover:text-red-300",
                form: { class: "inline-block" },
                data: { turbo_confirm: "Are you sure you want to remove this user?" } %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-gray-600 dark:text-gray-400">No users assigned to this project yet.</p>
    <% end %>
  </div>

  <!-- Add Users Section -->
  <div>
    <h2 class="text-xl font-semibold mb-4 text-gray-700 dark:text-white">Add Users</h2>
    <div class="bg-white dark:bg-gray-800 rounded shadow p-4">
      <%= form_with url: admin_project_add_users_path(@project), method: :post, class: "space-y-4" do |f| %>
        <div>
          <%= f.label :user_ids, "Select Users", class: "block text-sm font-medium text-gray-700 dark:text-white mb-2" %>
          <%= f.select :user_ids,
              User.where.not(id: @users.pluck(:id)).collect { |u| [u.email, u.id] },
              {},
              { multiple: true, size: 5,
                class: "w-full border border-gray-300 rounded px-3 py-2 dark:bg-gray-700 dark:border-gray-600 dark:text-white" } %>
        </div>
        <%= f.submit "Add Selected Users", 
            class: "w-full bg-blue-600 text-white font-semibold px-4 py-2 rounded hover:bg-blue-700 dark:bg-blue-700 dark:hover:bg-blue-600" %>
      <% end %>
    </div>
  </div>
</div>

<div class="mt-6">
  <%= link_to "Back to Projects", admin_projects_path,
              class: "inline-block bg-gray-200 text-gray-700 dark:bg-gray-700 dark:text-white px-4 py-2 rounded hover:bg-gray-300 dark:hover:bg-gray-600" %>
</div>
