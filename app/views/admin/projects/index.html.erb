<h1 class="text-2xl font-semibold mb-4 text-gray-700 dark:text-white">All Projects</h1>

<table class="min-w-full bg-white dark:bg-gray-800 rounded shadow">
  <thead class="bg-gray-100 dark:bg-gray-700 border-b dark:border-gray-600">
    <tr>
      <th class="text-left px-4 py-2 font-semibold text-gray-700 dark:text-white">Name</th>
      <th class="text-left px-4 py-2 font-semibold text-gray-700 dark:text-white">Description</th>
      <th class="px-4 py-2"></th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr class="border-b dark:border-gray-600">
        <td class="px-4 py-2">
          <%= link_to project.name, admin_project_path(project), class: "text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300" %>
        </td>
        <td class="px-4 py-2 text-gray-700 dark:text-gray-300"><%= project.description %></td>
        <td class="px-4 py-2 text-right whitespace-nowrap">
          <%= link_to "Edit", edit_admin_project_path(project),
                      class: "text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 mr-2" %> 
          <%= link_to "Delete", admin_project_path(project),
                      method: :delete,
                      data: { confirm: "Are you sure?" },
                      class: "text-red-600 hover:text-red-800 dark:text-red-400 dark:hover:text-red-300" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="mt-4">
  <%= link_to "Create New Project",
              new_admin_project_path,
              class: "bg-blue-600 text-white font-semibold px-4 py-2 rounded hover:bg-blue-700 dark:bg-blue-700 dark:hover:bg-blue-600" %>
</div>
